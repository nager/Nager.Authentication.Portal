# This means that editor config files above this file will be ignored
root = true

# Default settings
[*]
indent_style             = space
indent_size              = 4
charset                  = utf-8
end_of_line              = crlf
insert_final_newline     = true
trim_trailing_whitespace = true

[*.csproj]
indent_style             = space
indent_size              = 2
charset                  = utf-8
end_of_line              = crlf
insert_final_newline     = true
trim_trailing_whitespace = true
